{
  "manifest_version": 3,
  "name": "vRO Code Editor Resizer",
  "version": "2.0.1",
  "description": "Adds a button to resize the vRO (VCF Orchestrator) code editor for better visibility.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}